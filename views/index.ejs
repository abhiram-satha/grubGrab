<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Grub Grab</title>
    <!-- Font Awesome Library -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- GrubHub Style Sheets -->
    <link rel="shortcut icon" href="./images/logos/logo4.png"/>
    <link rel="stylesheet" href="/styles/cart.css" />
    <link rel="stylesheet" href="/styles/nav.css" />
    <link rel="stylesheet" href="/styles/header.css" />
    <link rel="stylesheet" href="/styles/ourlayout.css" />
    <link rel="stylesheet" href="/styles/menuItems.css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  </head>

  <body>
    <!-- Top nav bar (fixed) -->

    <nav class="navbar">
      <div class="logo">
        <img class="grublogo" src="./images/logos/logo4.png" alt="Grub Grab" />
      </div>
      <div class="cart">
        <div>0</div>
        <i class="fas fa-shopping-cart"></i>
        <div id="current-user"><%= user_id%></div>
      </div>
    </nav>

    <div class="orders">
      <h4>Cart Items</h4>
      <table class="orders-list">
        <tr>
          <th class="cart-food-photo"></th>
          <th class="cart-food-name">Item</th>
          <th class="cart-food-quantity">Quantity</th>
          <th class="cart-food-cost">Cost</th>
          <th class="cart-update">Update</th>
          <th class="cart-food-remove">Remove</th>
        </tr>
      </table>
    </div>

    <header class="header">
      <div></div>
    </header>

    <!-- Page-specific (main) content here -->

    <main class="container">
      <section class="food-type sticky-top">
        <button class="type-pick meat">Meat</button>
        <button class="type-pick vegetarian">Vegetarian</button>
        <button class="type-pick sides">Sides</button>
        <button class="type-pick desserts">Dessert</button>
        <button class="type-pick drinks">Drinks</button>
      </section>

      <article id="meal-container">

      </article>
    </main>

    <!-- GrubHub JS Scripts -->
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/scroll.js"></script>
  </body>
</html>
