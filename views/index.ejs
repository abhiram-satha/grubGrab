  <body>
    <!-- Top nav bar (fixed) -->

    <nav class="navbar">
      <div class="logo">
        <img class="grublogo" src="https://github.com/abhiram-satha/grubGrab/blob/master/logo.png?raw=true" alt="Grub Grab" />
      </div>
      <div class="cart">
        <div>0</div>
        <i class="fas fa-shopping-cart"></i>
      </div>
    </nav>

    <div class="orders">
      <h4>Cart Items</h4>
      <table class="orders-list">
        <tr>
          <th class="cart-food-photo"></th>
          <th class="cart-food-name">Item</th>
          <th class="cart-food-quantity">Quantity</th>
          <th class="cart-food-cost">Cost</th>
          <th class="cart-food-remove">Remove</th>
        </tr>
      </table>
    </div>

    <header class="header">
      <div></div>
    </header>

    <!-- Page-specific (main) content here -->

    <main class="container">
      <section class="food-type">
        <div><button class="type-pick meat">Meat</button></div>
        <div class="type-pick vegetarian">Vegetarian</div>
        <div class="type-pick sides">Sides</div>
        <div class="type-pick dessert">Dessert</div>
        <div class="type-pick drinks">Drinks</div>
      </section>

      <article id='meal-container'>
        <section class="food-card-holder">
          <div class="food-card">
            <section class="food-info">
              <div>
                <img class="menu-image" src="https://iheartumami.com/wp-content/uploads/2019/08/Whole30-Thai-Basil-Chicken-Paleo-Pad-Krapow-Gai-Easy-I-Heart-Umami-500x375.jpg" alt="chicken">
              </div>
              <div class="menu-desc">
                <div class='menu-key'>
                  <div class='menu-name'>Crispy Calamari</div>
                  <div class='menu-price'>$12.99</div>
                </div>
                <div class='menu-ingredients'>Boneless chicken breast, Thai Basil, Garlic, Chili Peppers, Eggs, Sea Salt, Fish Sauce, Osyter Sauce, Coconut Aminos</div>
              </div>
            </section>
            <button class="menu-button">
              Add to cart
            </button>
          </div>
        </section>
      </article>
    </main>
    <script src="public/scripts/menuItems.js"></script>
    <script src="public/scripts/cart.js"></script>
    <script src="public/scripts/app.js"></script>

